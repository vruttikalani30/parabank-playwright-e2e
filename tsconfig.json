{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "outDir": "dist",
    "rootDir": ".",

    "types": ["node", "@playwright/test"],
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
